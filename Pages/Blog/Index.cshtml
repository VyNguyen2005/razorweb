@page
@model razor09_razorweb.Pages_Blog.IndexModel
@using razor09_razorweb.Pages_Blog
@{
    ViewData["Title"] = "Index";
    int i = 0;
    ViewData["SoLuong"] = Model.SoLuong;
}


@{
    var pagingmodel = new razor09_razorweb.Helpers.PagingModel(){
        currentpage = Model.currentPage,
        countpages = Model.countPages,
        generateUrl = (int? p) => Url.Page("/Blog/Index", new { p = p})
    };
}

<h1>Danh sách bài viết</h1>

<form method="get" class="m-3">
    <label>Tìm kiếm</label>
    <input type="text" name="SearchString" value="">
    <button type="submit">Tìm</button>
</form>

<p>
    <a asp-page="Create" class="btn btn-primary">Tạo bài viết mới</a>
</p>
<h4>Tìm thấy @ViewData["SoLuong"] bài viết</h4>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Content)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Article) {
        <tr>
            <td>@(++i)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Chỉnh sửa</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Xem</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_Paging" model="@pagingmodel"></partial>



